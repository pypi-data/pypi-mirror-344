        â”œâ”€â”€ models/
        â”‚   â”œâ”€â”€ __init__.py
        â”‚   â””â”€â”€ user.py      # User ORM models
        â”œâ”€â”€ routers/
        â”‚   â”œâ”€â”€ __init__.py
