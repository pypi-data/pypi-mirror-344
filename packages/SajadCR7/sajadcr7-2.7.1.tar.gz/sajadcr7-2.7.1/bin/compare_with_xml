#!/usr/bin/env python



""" Tool to compare XML outputs of two SajadQ versions.

"""

import os
import sys

# Unchanged, running from checkout, use the parent directory, the SajadDE
# package ought to be there.
sys.path.insert(0, os.path.normpath(os.path.join(os.path.dirname(__file__), "..")))

# isort:start

import difflib

from SajadDE.tools.testing.Common import my_print
from SajadDE.utils.Execution import executeProcess

SajadDE1 = sys.argv[1]
SajadDE2 = sys.argv[2]
filename = sys.argv[3]

my_print(
    """\
Comparing output of '{filename}' using '{SajadDE1}' <-> '{SajadDE2}' ...""".format(
        filename=filename, SajadDE1=SajadDE1, SajadDE2=SajadDE2
    )
)

extra_options = os.getenv("DEVILPY_EXTRA_OPTIONS", "")

SajadDE1_cmd = "{SajadDE1} --xml {filename}".format(SajadDE1=SajadDE1, filename=filename)
SajadDE2_cmd = "{SajadDE2} --xml {filename}".format(SajadDE2=SajadDE2, filename=filename)

stdout_SajadDE1, stderr_SajadDE1, exit_SajadDE1 = executeProcess(SajadDE1_cmd, shell=True)
stdout_SajadDE2, stderr_SajadDE2, exit_SajadDE2 = executeProcess(SajadDE2_cmd, shell=True)


def makeDiffable(output):
    result = []

    for line in output.split(b"\n"):
        line = str(line)
        result.append(line)

    return result


def compareOutput(kind, out1, out2):
    diff = difflib.unified_diff(
        makeDiffable(out1),
        makeDiffable(out2),
        "{program} ({detail})".format(program="SajadDE1 " + filename, detail=kind),
        "{program} ({detail})".format(program="SajadDE2 " + filename, detail=kind),
        None,
        None,
        n=3,
    )

    result = list(diff)

    if result:
        for line in result:
            my_print(line, end="\n" if not line.startswith("---") else "")
        return 1
    else:
        return 0


exit_code_stdout = compareOutput("stdout", stdout_SajadDE1, stdout_SajadDE2)
exit_code_return = exit_SajadDE1 != exit_SajadDE2

if exit_code_return:
    my_print(
        """\
Exit codes {exit_SajadDE1:d} ({SajadDE1}) != {exit_SajadDE2:d} ({SajadDE2})""".format(
            exit_SajadDE1=exit_SajadDE1,
            SajadDE1=SajadDE1,
            exit_SajadDE2=exit_SajadDE2,
            SajadDE2=SajadDE2,
        )
    )

exit_code = exit_code_stdout or exit_code_return

if exit_code:
    sys.exit("Error, outputs differed.")

my_print("OK, same outputs.")


