include version.txt
include requirements.txt
include README.md
include *.py
include *.sh

# Include all template files
recursive-include templates *.html

# Include all static files
recursive-include static *.js *.css *.png *.jpg *.ico *.gif

# Include all app files
recursive-include app *.py *.json
recursive-include app/templates *.html
recursive-include app/static *.js *.css *.png *.jpg *.ico *.gif

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.log