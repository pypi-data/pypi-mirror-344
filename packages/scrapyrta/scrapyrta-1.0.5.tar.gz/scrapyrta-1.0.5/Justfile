export PYTHONPATH := "./scrapyrta"

default:
    just --list

run:
    uv run uvicorn app.main:app --port 8000

run-reload:
    uv run uvicorn app.main:app --port 8000 --reload

test:
    uv run pytest

deps-install:
    uv sync --all-extras --no-install-project --frozen

deps-update:
    uv lock --upgrade
    uv sync

lint:
    uv run ruff check .
    uv run deptry .

format:
    uv run ruff format .
