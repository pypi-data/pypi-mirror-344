    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "debug (list profiles)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli/__main__.py",
            "args": [
                "profile",
                "ls"
            ],
        },
        {
            "name": "debug (hafnia data download mnist)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli/__main__.py",
            "args": [
                "data",
                "download",
                "mnist",
                //"./.data",
                "--force"
            ]
        }
    ]
}