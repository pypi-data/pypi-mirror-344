[VK]
# Токен доступа к API ВКонтакте
access_token = access_token

# ID пользователя для начала сбора данных
start_user_id = start_user_id

[Settings]
# Максимальная глубина сбора (уровни друзей)
max_depth = 2

# Максимальное количество пользователей для сбора
max_users = 10

# Размер батча для запросов (максимум 25 для execute API)
batch_size = 25

# Загружать ли сообщества пользователей
load_communities = false


# Задержка между запросами в секундах
request_delay = 0.35

# Интервал сохранения (каждые N пользователей)
save_interval = 2 