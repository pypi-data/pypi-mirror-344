[credentials]
# Токен доступа к API ВКонтакте
access_token = your_token_here

# ID пользователя для начала сбора данных (необязательно, если заданы communities_ids)
start_user_id = 

[collection]
# Максимальная глубина обхода графа друзей
max_depth = 5

# Максимальное количество пользователей для сбора
max_users = 100000

# Размер батча для запросов API
batch_size = 25

# Задержка между запросами в секундах
request_delay = 0.35

# Интервал сохранения данных (количество пользователей)
save_interval = 5000

# Загружать ли сообщества пользователей
load_communities = false

# Список ID сообществ для парсинга подписчиков (через запятую)
# Например: communities_ids = 1234,5678
communities_ids = 

# Максимальное количество подписчиков для сбора из каждого сообщества
max_community_members = 10000

[storage]
# Директория для сохранения данных
data_dir = data

# Шаблон имени файла для сохранения
file_pattern = friends_{}.json 